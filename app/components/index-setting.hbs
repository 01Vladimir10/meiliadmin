<Form::Element @label={{namelize @name}}>
  <MonacoEditor
    @value={{json-stringify this.value}}
    @language='json'
    @sendValue={{this.save}}
    class='h-40'
    as |monaco|
  >
    <Button
      @text='Save'
      @style='primary'
      @size='sm'
      @onClick={{monaco.triggerSendValue}}
    />
    <Button @text='Cancel' @size='sm' @onClick={{this.setInitialValue}} />
    <Button @text='Reset' @size='sm' @onClick={{this.reset}} />
  </MonacoEditor>
</Form::Element>
