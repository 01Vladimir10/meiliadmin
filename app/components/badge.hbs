{{#let
  'inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-gray-light text-gray-dark'
  (hash
    success='bg-green-light text-green-dark'
  ) as |commonClasses variableClasses|
}}
  <span class="{{commonClasses}} {{get variableClasses @style}}" ...attributes>
    {{#if @icon}}
      <@icon class="mr-1" @size={{16}} />
    {{/if}}
    {{@label}}
  </span>
{{/let}}
