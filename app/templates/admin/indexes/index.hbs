<Headers::H1 @title='Indexes' />

<LinkTo @route='admin.indexes.new' class='block mb-4'>
  Create new index
</LinkTo>

<SimpleTable @data={{@model.results}} class='w-full' as |Column data|>
  <Column @prop='uid'>
    <LinkTo @route='admin.indexes.item' @model={{data.uid}}>
      {{data.uid}}
    </LinkTo>
  </Column>
  <Column @prop='primaryKey' />
  <Column @prop='createdAt'>
    {{date-time-format
      data.createdAt
      year='numeric'
      month='numeric'
      day='numeric'
      hour='numeric'
      minute='numeric'
      second='numeric'
    }}
  </Column>
  <Column @prop='updatedAt'>
    {{date-time-format
      data.updatedAt
      year='numeric'
      month='numeric'
      day='numeric'
      hour='numeric'
      minute='numeric'
      second='numeric'
    }}
  </Column>
</SimpleTable>
