<div class='grid grid-cols-3 gap-1 p-1 rounded bg-gray-lightest'>
  {{#each this.themes as |item|}}
    {{#let (eq item.id this.theme) as |selected|}}
      <Button
        @text={{item.name}}
        @icon={{item.icon}}
        @onClick={{fn this.changeTheme item.id}}
        @size='sm'
        class='border-none {{if selected "bg-white shadow-sm"}}'
      />
    {{/let}}
  {{/each}}
</div>
