{{#in-element this.toasts.destinationElement insertBefore=null}}
  <div
    class='absolute max-w-sm border rounded bg-base-7 shadow-sm'
    role='alert'
    style={{this.style}}
    {{did-insert this.didInsert}}
    ...attributes
  >
    <div class='p-4'>
      {{yield (hash invokeOnClose=this.invokeOnClose)}}
    </div>
    {{#if @autoClose}}
      <ProgressBar
        @duration={{this.autoCloseDuration}}
        @onFinish={{this.invokeOnClose}}
        class={{@closeIndicatorClass}}
      />
    {{/if}}
  </div>
{{/in-element}}
