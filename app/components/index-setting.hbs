<Form::Element @label={{namelize @name}}>
  <MonacoEditor
    @value={{this.value}}
    @language='json'
    @sendValue={{this.save}}
    class='h-40'
    as |monaco|
  >
    <Button @text='Save' @style='primary' @onClick={{monaco.triggerSendValue}} />
    <Button @text='Cancel' @onClick={{this.setInitialValue}} />
    <Button @text='Reset' @onClick={{this.reset}} />
  </MonacoEditor>
</Form::Element>
