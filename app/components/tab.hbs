<LinkTo
  @route={{@route}}
  @models={{if @model (array @model) @models}}
  @activeClass="text-primary border-b border-primary"
  class="flex items-center h-10 px-4 py-2 text-center bg-transparent whitespace-nowrap focus:outline-none"
>
  {{#if @icon}}
    <@icon class="mr-2" />
  {{/if}}
  {{@text}}
</LinkTo>
