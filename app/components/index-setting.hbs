<Form::Element @label={{namelize @name}}>
  <MonacoEditor
    @value={{json-stringify this.value}}
    @language='json'
    @onChange={{set this 'value'}}
    class="h-80"
  />

  <Button @text='Save' @style='primary' @onClick={{this.save}} />
  <Button @text='Cancel' @onClick={{this.setInitialValue}} />
  <Button @text='Reset' @onClick={{this.reset}} />
</Form::Element>
