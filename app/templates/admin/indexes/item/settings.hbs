<Form::Listbox
  @value={{this.model.currentSetting}}
  @values={{this.model.settings}}
  @onChange={{set this.model 'currentSetting'}}
  class="w-72"
  as |item|
>
  {{if item.name (namelize item.name) 'All settings'}}
</Form::Listbox>

<IndexSetting
  @setting={{this.model.currentSetting}}
  @index={{this.model.index}}
/>
