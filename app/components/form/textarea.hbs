<Form::Element
  @label={{@label}}
  @for={{this.id}}
  @required={{@required}}
  @helper={{@helper}}
>
  <Textarea
    type='text'
    name={{@name}}
    id={{this.id}}
    class='block w-full p-2 bg-transparent border rounded focus:outline-none'
    placeholder={{@placeholder}}
    @value={{@value}}
    {{on 'change' this.onChange}}
  />
</Form::Element>
