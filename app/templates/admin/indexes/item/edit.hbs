{{#if @model.isNew}}
  <Headers::H1 @title='Create new index' />
{{/if}}

<form {{on 'submit' this.save}}>
  {{#if @model.isNew}}
    <Form::Input @label='UID' @name='uid' @required={{true}} />
  {{/if}}

  <Form::Input
    @label='Primary key'
    @name='primaryKey'
    @value={{@model.primaryKey}}
    @required={{true}}
  />

  <Button type='submit' @text='Save' @style='primary' />
  <Button @text='Cancel' @onClick={{this.cancel}} />
</form>
