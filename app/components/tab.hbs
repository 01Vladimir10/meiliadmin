<LinkTo
  @route={{@route}}
  @models={{if @model (array @model) (if @models @models (array))}}
  @activeClass="text-primary border-b border-primary"
  class="flex items-center h-10 px-4 py-2 text-center text-base-2 no-underline bg-transparent whitespace-nowrap focus:outline-none"
  ...attributes
>
  {{#if @icon}}
    <@icon class="mr-2" />
  {{/if}}
  {{@text}}
</LinkTo>
