<div class="relative min-h-screen flex">
  <div class="flex flex-col w-64 min-h-screen px-4 py-8 border-r">
    <h2 class="flex items-center text-xl mb-8">
      <img src="/logo.svg" alt="MeiliSearch" class="w-8 h-8 mr-2">
      MeiliSearch Admin
    </h2>

    <div class="flex flex-col flex-1">
      <nav>
        <div class="px-4 py-2 text-sm text-gray">Indexes</div>
        {{#each @model.indexes as |item|}}
          <LinkTo
            @route="admin.indexes.item"
            @model={{item}}
            class="flex items-center px-4 py-2 font-semibold text-lg text-gray-dark hover:text-black">
            {{capitalize item.uid}}
          </LinkTo>
        {{/each}}
      </nav>
      <div class="flex flex-row items-center mt-auto px-4">
        <span class="mr-1 text-gray" title="The version of a running Meilisearch instance">v{{@model.version.pkgVersion}}</span>
        {{#if (eq @model.health.status "available")}}
          <this.CheckboxMarkedCircle class="text-green" @size={{18}} @title={{@model.health.status}}/>
        {{else}}
          <this.AlertCircle class="text-yellow" @size={{18}} @title={{@model.health.status}}/>
        {{/if}}
      </div>
    </div>
  </div>

  <div class="flex-1 p-4">
    {{outlet}}
  </div>
</div>
